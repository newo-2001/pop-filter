{
    "name": "Pop Filter",
    "description": "Matthew Mercer ðŸ˜³",
    "version": "1.2.1",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [ "assets/flags/*.png" ],
            "matches": [ "https://www.behindthevoiceactors.com/*" ]
        }
    ],
    "content_scripts": [
        {
            "js": [ "main.js" ],
            "css": [ "main.css", "shared.css" ],
            "matches": [ "https://www.behindthevoiceactors.com/*" ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "64": "favicon.png"
    },
    "background": {
        "service_worker": "worker.js",
        "type": "module"
    }
}